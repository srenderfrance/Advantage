<head>   
    <!-- external CSS link -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css" />
    <meta name="viewport" content= "width=device-width, initial-scale=1.0">
</head>
<body>

<h1>Welcome to Phase 1 Advantage</h1>

<form action="/" method="POST" id="loginForm">
    <div class="flex flexCenter">
        <div class="flex" id="div1">
            <label for="username" class="primaryLabel">User Name</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="flex" id="div2">
            <div>
                <label for="password" class="primaryLabel">Password</label>
                <input type="password" class="passwordInput" id="passwordI" name="password" required>
            </div>
            <div class="center flex">
                <input type="checkbox" class="checkbox" id="passwordCheckBox" name="passCheckBox">
                <label for="passCheckBox" class="checkboxLabel secondaryLabel" id="passCheckBLabel">Show Password</label>
            </div>
        </div>
    </div>
    <button type="button" id="loginButton">Login</button>
</form>
<h2>If you haven't registered enter your email and provided password below.</h2>
<form action="/preRegister" method="POST">
    <div>
        <label for="email" class="primaryLabel">Enter your email address here</label>
        <input type="email" name="email" required>
        <label for="password" class="primaryLabel">Enter provided temporary password</label>
        <input type="text" id="password" name="password" required>
    </div>
    <button type="submit">Begin Registration</button>
</form>
<script type="text/javascript" src="/js/login.js"></script>
</body>