<h1><%=user.cohort %></h1>
<h2><%=user.username %></h2>
<div>
    <h3>Vocabulary size</h3>
    <h3><%=user.hasReviewed.length %></h3>
</div>
<form action="/student/reviewActivity" method="POST">
<div>
    <ul>New Exercises</ul>
    <li><a href=""></a>
    </li>
    <label for="previous-excercises"></label>
    <select name="previous-excercises" id="excersises">
        <option value="Excercise 1"></option>
    </select>
    <button type="submit" id="selectActivity">Select</button>
</div>
</form>

<form action="/student/reviewActivity" method="POST">
    <div class="container">
        <label for="activity" class="primaryLabel">Select activity to review</label>
        <select name="activity" id="activityName" required>
        <% for(let i=0; i < activities.length; i++) {%>   
            <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
        <% } %>
        </select>
        <button type="submit" id="selectActivity">Select</button>
    </div>    
</form>
<div>
    <% if (user.adminLevel = 1){ %>
        <button onclick="window.location.href ='admin';">Class Admin</button> 
   <% }
    if (user.adminLevel = 2){ %>
         <button onclick="window.location.href ='admin/schoolAdmin';">Shool Admin</button>  
    <% } %>
    <button onclick="window.location.href ='/logout';">Logout</button> 
       
    

</div>