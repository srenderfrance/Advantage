
<head>   
    <!-- external CSS link -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css" />
	
	
</head>

<body>
<h1>Welcome to <%=user.cohort %>. You are logged in as:</h1>
<h1> <%=user.username %> </h1>

<div class="studentGrid">
    <div>
        <div class="statsContainer container">
        <h3>Your Stats</h3>
        <h3>Total vocabulary:</h3>
        <h3>Total number of Activities: <%=user.hasReviewed.length %></h3>
        <h3>Extra Activity Review Sessions:</h3>
    </div>
        <form action="/student/reviewNewActivity" method="POST">
            <div class="container smallForm">
                <label for="newActivity" class="secondaryLabel flex1">New Activities</label>
                <select name="activity" id="activityName" required>
                <% for(let i=0; i < activities.length; i++) {%>   
                <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %>
                </select>
                <button type="submit" id="selectActivity">Select</button>
            </div>
        </form>

        <form action="/student/reviewActivity" method="POST">
            <div class="container smallForm">
                <label for="activity" class="secondaryLabel flex1">Previous activities</label>
                <select name="activity" id="activityName" required>
                <% for(let i=0; i < activities.length; i++) {%>   
                    <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %>
                </select>
                <button type="submit" id="selectActivity">Select</button>
            </div>    
        </form>
        <form action="/student/reviewProblemWords" method="POST">
            <div class="container smallForm">
                <label for="reviewProblemWords" class="secondaryLabel flex1">Challenging Words</label>
                <select name="reviewProblemWords" id="activityName" required>
                  <% for(let i=0; i < activities.length; i++) {%>   
                    <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %> 
                </select>
                <button type="submit" id="selectActivity">Select</button>
            </div>
        </form>
        <form action="/student/reviewProblemWords" method="POST">
            <div class="container smallForm">
                <label for="custonAvtivities" class="secondaryLabel flex1">Custom Activities</label>
                <select name="custonAvtivities" id="activityName" required>
                  <% for(let i=0; i < activities.length; i++) {%>   
                    <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %> 
                </select>
                <button type="submit" id="selectActivity">Select</button>
            </div>
        </form>
        <form action="/student/reviewProblemWords" method="POST">
            <div class="container smallForm">
                <label for="revewAll" class="secondaryLabel flex1">Review All</label>
                <select name="revewAll" id="activityName" required>
                  <% for(let i=0; i < activities.length; i++) {%>   
                    <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %> 
                </select>
                <button type="submit" id="selectActivity">Select</button>
            </div>
        </form>
    </div>
    <div>
         <h2>Create/Edit Custom Activities</h2>
        <div class="customAcrivityContainer">
            <div class="selectedImagecontainer">
                <img src="" alt="">
            </div> 
            <div>
                <label for="selectedImages" class="secondaryLabel">Selected Vocab Words</label>
                <select name="selectedVocabWords" id="selectedVocabWords" required>
                     <% for(let i=0; i < activities.length; i++) {%>   
                    <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %> 
                  
                </select>
            </div>
        </div>    


    </div>    
</div>
<div class="navButtons">
    <% if (user.adminLevel = 1){ %>
        <button onclick="window.location.href ='admin';" class="navButton">Class Admin</button> 
   <% }
    if (user.adminLevel = 2){ %>
         <button onclick="window.location.href ='admin/schoolAdmin';" class="navButton">School Admin</button>  
    <% } %>
    <button onclick="window.location.href ='/logout';" class="navButton">Logout</button> 
       
    

</div>
    
</body>