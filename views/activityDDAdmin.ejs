
<head>   
    <!-- external CSS link -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">	
    <meta name="viewport" content= "width=device-width, initial-scale=1.0">
	
</head>



<body class="backgroundColorL">

<div class="flex top">
    <div class="cohortContainer flexColum">
                <h2>Rough and Ready Activity Admin</h2>   
                <h2 id="cohort">Cohort: <%=user.cohort.cohortName %></h2>
   
    </div>   
</div>
    


<form id="newVWForm" action="/admin/createVocab" enctype="multipart/form-data" method="POST">
    <div class="container padding">
        <div class="divider">
            <div class="flexSplit">
                <div class="flex">
                    <div>
                    <h2>Select an Activity To Edit</h2>
                    <div class="container outlineNone aSelfCenter">

                    <div class="flex">
                        <select name="activity" id="selectActivity" class="selection" required>
                            <option value="" disabled selected hidden>Choose an Activity</option>
                        <% for(let i=0; i < activities.length; i++) {%>   
                            <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                        <% } %>
                        </select> 
                        <select name="filter" id="filterActivities" class="filterSelect">
                        <option value="" disabled selected hidden>Sort/Filter</option>
                            <optgroup label="Sort">
                                <option value="Alphabetical">Alphabetical</option>
                                <option value="Date">Date</option>
                                <option value="Number">Number</option>
                            </optgroup>
                            <optgroup label="Filter">                                
                                <option value="Nouns">Nouns</option>
                                <option value="Verbs">Verbs</option>
                                <option value="Adjectives">Adjectives</option>
                                <option value="Conjugations">Conjugations</option>
                                <option value="Phrases">Phrases</option>
                                <option value="LexicarryLike">Lexicarry</option>
                                <option value="Grammar Flooding">G. Flooding</option>
                            </optgroup>

                    </select>
                    
                    </div>
                    </div>
                    </div>
                </div>
                <select name="activitySubType" id="activitySubType" class="selection">
                    <option value="" disabled selected hidden>Choose a Sub-Category</option>
                    <option value="Adj/Adv">Adj/Adv</option>
                    <option value="Conjugations">Conjugations</option>
                    <option value="Grammar Flooding">G. Flooding</option>
                    <option value="LexicarryLike">Lexicarry</option>
                    <option value="Nouns">Nouns</option>
                    <option value="Phrases">Phrases</option>
                    <option value="Random">Random</option>
                    <option value="Verbs">Verbs</option>
                </select> 
                 <select name="vocabType" id="vocabType" class="selection">
                    <option value="new">All Vocab is NEW</option>
                    <option value="other">No vocab is NEW</option>
                    <option value="individual">Select individually</option>
                </select>    
            </div>
            <div class="moveRight"> 
                <button type="button" id="finalizeActivity">Finalize Activity</button>
            </div> 
        </div>      
               
           
        <div>
            <h3 id="activityToEdit">No Activity Selected</h3>
        </div>
        <div class="container uploadGrid" id="uploadContainer">
            
            <div class="block1">
               <div class="flexInputsRR" >
                    <label for="newVocabWord" class="primaryLabel">Description:</label>
                    <input type="text" id="newVocabWord" name="description" placeholder="Enter a word or phrase" required>
                </div> 
                <div class="flexInputsRR">
                    <label for="category" class="primaryLabel">Category</label>
                    <select name="category" id="category" class="selection" required>
                        <option value="" disabled selected hidden>Choose a Category</option>
                    <% for(let i=0; i < categories.length; i++) {%>
                        <option value="<%=categories[i] %>"><%= categories[i] %></option>  
                    <% } %>
                    </select>
                </div>    
            </div>
            <div class="block2">
                <label for="newVocabCB" class="checkboxLabel secondaryLabel" id="passCheckBLabel">Count this as New Vocabulary</label>    
                <input type="checkbox" checked disabled class="checkbox" id="newVocabulary" name="newVocabCB">   
                
            </div>
            <div class="block3">
                <h4>To link this Vocab Word to the audio from an existing Vocab Word, use the menus below.</h2>
                <div class="flexColumn2">
                    <div class="container outlineNone">
                        <select name="activity2" id="activityName2" class="selection">
                            <option value="" disabled selected hidden>Choose an Activity</option>
                        <% for(let i=0; i < activities.length; i++) {%>   
                            <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                        <% } %>
                        </select> 
                    </div>   
                    <div class="mainSelector" >
                        <select name="vwToLink" id="vwToLink" class="selection" > 
                            <option value="">Select Vocab Word</option>
                        </select>
                    </div>
                    <button type="button" id="selectActivity2">Select</button> 
                </div>
            </div>
            <div class="block4">
                 <div class="flexColumn">
                     <div class="uploadBlockRR">  
                        <label for="image" class="secondaryLabel">Vocab Word Image</label>
                        <input type="file" class="uploadInput" id="image" value="image" name="image"> 
                    </div>
                    <div class="uploadBlockRR"> 
                        <label for="audioT" class="secondaryLabel">Vocab Word Introduction Audio</label>
                        <input type="file" id="audioT" class="uploadInput" value="audioTis" name="audioTis">
                    </div>
                     
                </div>

            </div>   
            <div class="block5">
                <div class="flexColumn">
                    <div class="uploadBlockRR">
                        <label for="audioQ" class="secondaryLabel">Question Audio</label>
                        <input type="file" id="audioQ" class="uploadInput" value="audioQ" name="audioQ">
                    </div>
                    <div class="uploadBlockRR">
                        <label for="audioN" class="secondaryLabel">The Correction Audio</label>
                        <input type="file" id="audioN" class="uploadInput" value="audioN" name="audioN">  
                    </div>  
                </div>
            </div>
        </div>   
        <div class="uploadBlockRR padding1">
            <label for="folderUpload" class="secondaryLabel">Upload by Folder</label>
            <input type="file" id="folderUpload" webkitdirectory = "true" multiple class="uploadInput" value="folderUpload" name="folderUpload">  
           
        </div>
        <div class="moveRight padding2">
            <button id="submitButton" type="button">Upload New Vocab Word</button> 
        </div>           
    </div>  
    
</form>       
    <div class="container">
        <h2>Vocab Word Preview/Edit</h2>
        <div>
            <div class="previewContainer">
                <div>
                    <div class="mainSelector">
                        <label for="existingVocabWords" class="primaryLabel">Select vocab word to edit</label>
                        <select name="existingVocabWords" id="existingVocabWords" class="selection" > 
                            <option value="">Vocab Words</option>
                        </select>
                    </div>
                    <h3 id="description">Description: No vocab word has been selected.</h3>
                    <h3 id="kind">Category: No vocab word has been selected.</h3>
                </div>
                <div class="imagecontainer">
                    <img src="" alt="">
                </div> 
                    <div class="deleteButtonContainer border">
                        <h3 class="deleteHeading">Delete VOCAB WORD</h4>
                        <p class="description">Delete and completely remove all element of the word</p>
                        <button type="button" id="deleteVW" class="deleteButton">DELETE</button>
                    </div>
            </div>
            <div class="audioPreviewContainer">
                <div class="flex">
                    <div>
                        <h3 class="preview">Play Introduction Audio</h3>
                        <audio src="" controls id="audioTis"></audio>
                    </div> 
                </div>   
                <div class="flex">
                    <div>
                        <h3 class="preview">Play Question Audio</h3>
                        <audio src="" controls id="audioQPreview"></audio>
                    </div>
                </div>
                <div class="flex">
                    <div>
                        <h3 class="preview">Play Correction Audio</h3>
                        <audio src="" controls id="audioNPreview"></audio>
                    </div> 
                </div>
            </div>
            <div class="flex">
                <div>
                    <input type="text" id="newVWDescription" name="description" placeholder="Enter New Description">
                    <button type="button" class="deleteButton" id="changeVWDescription">Change</button>
                </div>
                <div>
                    <select name="category" id="newVWCategory" class="selection" required>
                    <option value="" disabled selected hidden>Choose a Category</option>
                        <% for(let i=0; i < categories.length; i++) {%>
                            <option value="<%=categories[i] %>"><%= categories[i] %></option>  
                        <% } %>
                   </select> 
                    <button type="button" id="changeVWCategory" class="deleteButton">Change</button>
                </div>
            </div>
            <div class="deleteContainer divider">
                    <form method="put" enctype="multipart/form-data" id="newImageForm">
                        <div class="uploadBlock">  
                            <label for="image">Change Image</label>
                            <input type="file" class="uploadInput replaceInput" id="newImage" value="newImage" name="newImage"> 
                            <button type="button" id="replaceImage" class="deleteButton">Replace</button>
                        </div>
                    </form>
                    <form method="put" id="newAudioTisForm" enctype="multipart/form-data">
                        <div class="uploadBlock">
                            <label for="audioT">Introduction Audio</label>
                            <input type="file" id="newAudioTis" class="uploadInput replaceInput" value="newAudioTis" name="newAudioTis">
                            <button type="button" id="replaceAudioTis" class="deleteButton">Replace</button>
                        </div>
                    </form>
                    <form method="put" id="newAudioQForm" enctype="multipart/form-data">
                        <div class="uploadBlock">
                            <label for="audioQ">Question Audio</label>
                            <input type="file" id="newAudioQ" class="uploadInput replaceInput" value="newAudioQ" name="newAudioQ">
                            <button type="button" id="replaceAudioQ" class="deleteButton">Replace</button>        
                        </div> 
                    </form>
                    <form method="put" id="newAudioNForm" enctype="multipart/form-data">
                        <div class="uploadBlock">
                            <label for="audioN">The Correction Audio</label>
                            <input type="file" id="newAudioN" class="uploadInput replaceInput" value="newAudioN" name="newAudioN">  
                            <button type="button" id="replaceAudioN" class="deleteButton">Replace</button>
                        </div>    
                    </form>
            </div>
           
                <div class="gridColumnWide divider">
                        <div class="activityBox1"> 
                            <div class="activityBox3">                            
                                <h2>Currently Selected Activity</h2>
                                <h2 id="activityToEdit2">No Activity Selected</h2>  
                            </div>

                            <div class="activityBox2"> 
                                <input type="text" id="newActivityName" name="newActivityName" placeholder="Enter New Activity Name">
                                <button type="button" class="deleteButton" id="changeActivityName">Change</button>
                            </div>
                        </div>  
                    <div class="flexColumn">  
                        <div class="deleteButtonContainer border">
                            <h3 class="deleteHeading">Delete ACTIVITY</h4>
                            <p class="description">Delete the entire activity including all vocab words associated with it</p>
                            <button type="button" id="deleteActivity" class="deleteButton">DELETE</button>
                        </div>
                    </div>
                    <div class="activityBox4 span2">
                                <div>
                                    <h3 id="actSubT">Activity Sub-Type:</h3>
                                    <div class="activityBox2">
                                        <select name="activitySubType" id="newActivitySubType" class="selection">
                                            <option value="" disabled selected hidden>Choose a Sub-Category</option>
                                            <option value="Adj/Adv">Adj/Adv</option>
                                            <option value="Conjugations">Conjugations</option>
                                            <option value="Grammar Flooding">G. Flooding</option>
                                            <option value="LexicarryLike">Lexicarry</option>
                                            <option value="Nouns">Nouns</option>
                                            <option value="Phrases">Phrases</option>
                                            <option value="Random">Random</option>
                                            <option value="Verbs">Verbs</option>
                                        </select>
                                        <button type="button" class="deleteButton" id="changeSubType">Change</button>
                                    </div>
                                </div>
                                <div>
                                    <h3 id="actDate">Activity Date:</h3>
                                    <div class="uploadBlock">
                                        <label for="newActivityDate" class="primaryLabel">Activity Date:</label>
                                        <div>
                                            <input type="date" id="newActivityDate" name="newActivityDate" placeholder="Enter New Activity Date">
                                            <button type="button" class="deleteButton" id="changeActivityDate">Change</button>
                                        </div> 
                                    </div>
                                </div>
                                <div>
                                    <h3 id="actNumber">Activity Number:</h3>
                                    <div class="uploadBlock">
                                        <label for="activityNumber" class="primaryLabel">Activity number</label>
                                        <div>
                                            <input type="number" id="newActivityNumber" name="number" placeholder="Meeting#.Activity#">
                                            <button type="button" class="deleteButton" id="changeActivityNumber">Change</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>    
            
    </div>

 <div class="flexSplit">
    <div class="flex">
        <% if (user.adminLevel > 0){ %>
            <button onclick="window.location.href ='/admin';">Activity Admin</button>
        <% } %>   
        <% if (user.adminLevel > 0){ %>
            <button onclick="window.location.href ='/admin/activityWaL';">WaL Admin</button>
        <% } %>
        <% if (user.adminLevel > 1){ %>
            <button onclick="window.location.href ='/admin/schoolAdmin';">School Admin</button>
        <% } %>
        <!--  <button onclick="window.location.href = 'admin/activityP';">Phrases Admin</button>   -->
    </div>
    <div class="navButtons">
        <button onclick="window.location.href ='/student';" class="navButton">GP HOME</button>
        <button onclick="window.location.href ='/logout';" class="navButton">Logout</button>
    </div>
</div>

<script type="text/javascript" src="/js/adminDD.js"></script>


</body>

