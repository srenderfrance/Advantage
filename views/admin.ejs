</head><h1>ADMIN PAGE</h1>
<body>
    

<form action="/newCohort" method="POST">
    <div>
        <h2>Create New Class</h2>
        <label for="cohort">New Class Name</label>
        <input type="text" id="cohort" name="cohortName"
        required>
         <label for="language">Language</label>
        <input type="text" id="language" name="language"
        required>
        <label for="startDate">Start Date</label>
        <input type="text" id="startDate" name="startDate"
        required>
    </div>    
    <button type="submit">Create</button>
</form>
<form action="/adminCohortAdmin" method="POST">
    <div class = "dropDown">
        <h2>Give Cohort Admin Privileges</h2>
        <label for="cohort">Select Class</label>    
            <select name="cohort" id="cohortName" required>
                <option value="">Select Class</option>
                <% for(var i=0; i < cohorts.length; i++) {%>   
                <option value="<%= cohorts[i].cohortName %>"><%= cohorts[i].cohortName %></option>
            <% } %>
    </div>    
    <button type="submit">Select</button>
</form>

<form action="">
    <div class="dropDown">
        <label for="student">Student</label>
            </select name="student" id="studentName" required>
            <option value="">Select Student</option>
    </div>
    <button type="submit">Update</button>
</form>

<a href="/">Login</a>
<script type="text/javascript" src="/js/admin.js"></script>
</body>