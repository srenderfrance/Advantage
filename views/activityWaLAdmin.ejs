<head>   
    <!-- external CSS link -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/styleWal.css">	
    <meta name="viewport" content= "width=device-width, initial-scale=1.0">
	
</head>

<body class="backgroundColorL">
    <h1 id="cohort"> <%=user.cohort.cohortName %></h1>
    <h2>Class Admin: Watch and Listen Activity Upload</h2>

<form action="/admin/createWaL" enctype="multipart/form-data" method="POST">
    <div class="container">
        <div class="headingSelect">
            <h2 id="activityHeading">Select an Activity To Edit</h2>
            <div class="container outlineNone">
                <select required name="activity" id="activityName" class="selection">
                    <option value="" disabled selected hidden>Choose an Activity</option>
                <% for(let i=0; i < activities.length; i++) {%>   
                    <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% } %>
                </select> 
            </div>
        </div>
        <h3 id ="activityToEdit">Upload Media to Selected Activity</h3>    
        <div class="container gridContainer" id="uploadContainer">
            <div class="container flexColumn">
                <div class="gridContainer" >
                    <div class="uploadBlock">    
                        <label for="walVideo">Video</label>
                        <input type="file" id="walVideo" name="video" value="'video" class="uploadInput">
                    </div>    
                </div>
                <div class="gridContainer">
                    <div class="uploadBlock">
                        <label for="imageD">Dictionary Image</label>
                        <input type="file" name="imageD" id="imageD" value="imageD" class="uploadInput">
                    </div>
                </div>
                <div class="gridContainer" >
                    <div class="uploadBlock">  
                        <label for="imageR">Review Image</label>
                        <input type="file" class="uploadInput" id="imageR" value="imageR" name="imageR"> 
                    </div>         
                </div>
            </div>
            <div class="container flexColumn">
                <div class="gridContainer">
                    <div class="uploadBlock"> 
                        <label for="audioT">Dictionary Audio</label>
                        <input type="file" id="audioD" class="uploadInput" value="audioD" name="audioD">
                    </div>
                </div>
                <div class="gridContainer">
                    <div class="uploadBlock">
                        <label for="audioR">Review Audio</label>
                        <input type="file" id="audioR" class="uploadInput" value="audioR" name="audioR">
                    </div>
                </div>
                <div class="gridContainer">    
                    <div class="uploadBlock">
                        <label for="mediaE">Examples Audio</label>
                        <input type="file" id="mediaE" class="uploadInput" value="mediaE" name="mediaE">  
                    </div>
                </div>  
            </div>   
        </div>  
        <div class="deleteContainer">
            <button type="submit">Upload Media for WaL Activity</button>
            <div class="flex">
                <div class="uploadBlock" id="selectorContainer">
                    <select name="deleteSelector" id="deleteSelector" class="select">
                        <option value="" disabled selected hidden>Choose media to delete</option>
                        <option value="video">Video</option>
                        <option value="dictionaryImage">Dictionary Image</option>
                        <option value="reviewImage">Review Image</option>
                        <option value="dictionaryAudio">Dictionary Audio</option>
                        <option value="reviewAudio">Review Audio</option>
                        <option value="exampleMedia">Example Media</option>
                    </select>
                    <button type="button" id="deleteMediaB">Delete Selected Media</button>
                </div>
            </div>
                
            <button type="button" id="deleteActivityB">Delete Activity</button>
        </div> 
    </div>        
</form>       
 

 <div class="">
    <div class="previewHeader">
        <div class="mainSelector">
            <label for="waLActivities" class="primaryLabel">Select Activity to Preview</label>
            <select name="waLActivities" id="waLActivities" class="selection" >
                 <option value="" disabled selected hidden>Choose an Activity</option> 
                <% for(let i=0; i < activities.length; i++) {
                if(activities[i].type === "WaL"){%>   
            <option value="<%=activities[i].description %>"><%= activities[i].description %></option>
                <% }} %>
            </select>
        </div>
<!--        <h3 id="description">Description: No activity has been selected.</h3>  -->  
    </div>
    
        <div class="reviewContainer flexColumn flexCenter alignContentAround">
            <h3 class="reviewHeading">Video Example</h3>
            <video src="" alt="" controls id="reviewVideo"></video>
        </div>
        <div class="reviewContainer flexColumn flexCenter alignContentBetween">
            <div>
                <h3 class="reviewHeading">Dictionary Image and Audio</h3>
                <audio src="" id="audioDP" controls></audio>
            </div>
            <div id="imageDContainer">
                <img src="" class="imageWaL" alt="" id="imageDP">
            </div> 
            
        </div>
    
    <div class="reviewContainer flexColumn flexCenter alignContentAround">
        <div>
            <h3 id="reviewHeading">Review Image and Audio</h3>
            <audio src="" id="audioRP" controls></audio>
        </div>
            <div id="imageRContainer">
                <img src="" alt="" class="imageWaL" id="imageRP">
                
            </div>  
        
    </div>
</div>



<div class="navButtons">
    
    <button onclick="window.location.href ='/admin';" class="navButton">Class Admin</button>
    <button onclick="window.location.href ='/student';" class="navButton">Student Page</button>
  <% if (user.adminLevel > 1){ %>
         <button onclick="window.location.href ='/admin/schoolAdmin';" class="navButton">School Admin</button>
    <% } %>
    <button onclick="window.location.href ='/logout';" class="navButton">Logout</button>
</div>
<script type="text/javascript" src="/js/adminWaL.js"></script>
</body>